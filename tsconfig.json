{
  "compilerOptions": {
    "isolatedModules": true,
    "allowJs": true,
    "target": "es6",
    "moduleResolution": "node",
    "module": "ESNext",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "dist", "*.config*"]
}
